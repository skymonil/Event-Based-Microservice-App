{
	"info": {
		"_postman_id": "b3e6d327-a5c9-4551-92d2-f38462a095f4",
		"name": "Inventory Service (DevOps)",
		"description": "Test suite for the Multi-Warehouse Inventory Service.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": ["{{base_url}}"],
					"path": ["health"]
				}
			}
		},
		{
			"name": "2. Create New Product (Admin)",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"id\": \"{{new_product_id}}\",\n    \"name\": \"Samsung Galaxy S24\",\n    \"sku\": \"SAMSUNG-S24-BLK\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/products",
					"host": ["{{base_url}}"],
					"path": ["products"]
				}
			}
		},
		{
			"name": "3. Adjust Stock (Add to Mumbai)",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"warehouseId\": \"11111111-1111-1111-1111-111111111111\",\n    \"quantity\": 50,\n    \"mode\": \"ADD\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/products/{{new_product_id}}/adjust",
					"host": ["{{base_url}}"],
					"path": ["products", "{{new_product_id}}", "adjust"]
				}
			}
		},
		{
			"name": "4. Check Availability (Global)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/availability?productId={{new_product_id}}&quantity=1",
					"host": ["{{base_url}}"],
					"path": ["availability"],
					"query": [
						{ "key": "productId", "value": "{{new_product_id}}" },
						{ "key": "quantity", "value": "1" }
					]
				}
			}
		},
		{
			"name": "5. Check Availability (Specific Warehouse)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/availability?productId={{new_product_id}}&quantity=10&warehouseId=11111111-1111-1111-1111-111111111111",
					"host": ["{{base_url}}"],
					"path": ["availability"],
					"query": [
						{ "key": "productId", "value": "{{new_product_id}}" },
						{ "key": "quantity", "value": "10" },
						{ "key": "warehouseId", "value": "11111111-1111-1111-1111-111111111111" }
					]
				}
			}
		},
		{
			"name": "6. Get Product Details (Stock Breakdown)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/products/{{new_product_id}}",
					"host": ["{{base_url}}"],
					"path": ["products", "{{new_product_id}}"]
				}
			}
		},
		{
			"name": "7. Get Reservations (Debugging Saga)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/orders/{{order_id}}/reservations",
					"host": ["{{base_url}}"],
					"path": ["orders", "{{order_id}}", "reservations"]
				}
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3003/api",
			"type": "string"
		},
		{
			"key": "new_product_id",
			"value": "55555555-5555-5555-5555-555555555555",
			"type": "string"
		},
		{
			"key": "order_id",
			"value": "99999999-9999-9999-9999-999999999999",
			"type": "string"
		}
	]
