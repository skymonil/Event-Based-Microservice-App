{
	"info": {
		"_postman_id": "1cc9633c-990b-475f-9ef0-c92e798cd621",
		"name": "Order & Payment Saga",
		"schema": "https://schema.getpostman.com/json/collection/v2.0.0/collection.json",
		"_exporter_id": "41514843"
	},
	"item": [
		{
			"name": "1. Login-User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Post-response (Tests) script",
							"try {",
							"    const response = pm.response.json();",
							"    ",
							"    if (response.token) {",
							"        pm.environment.set(\"bearerToken\", response.token);",
							"        console.log(\"✅ Token successfully set!\");",
							"    } else {",
							"        console.error(\"❌ Login succeeded but 'token' key was not found in response body.\");",
							"    }",
							"} catch (e) {",
							"    console.error(\"❌ Failed to parse response JSON: \", e);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"email\": \"monil@gmail.com\",\r\n    \"password\": \"monil@1234\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": "{{userServiceUrl}}/login"
			},
			"response": []
		},
		{
			"name": "2. Create-Order (MacBook Pro)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const uuid = require('uuid');",
							"// Generates a fresh UUID and saves it to the environment",
							"pm.environment.set(\"idempotencyKey\", uuid.v4());"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();",
							"",
							"pm.test(\"Order Created (201)\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"if (response.id) {",
							"    pm.environment.set(\"activeOrderId\", response.id);",
							"    console.log(\"✅ Active Order ID set to:\", response.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": {
						"token": "{{bearerToken}}"
					}
				},
				"method": "POST",
				"header": [
					{
						"key": "idempotency-key",
						"value": "{{idempotencyKey}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"items\": [\r\n    {\r\n      \"productId\": \"bc6ed327-a5c9-4551-92d2-f38462a095f4\",\r\n      \"quantity\": 1\r\n    }\r\n  ],\r\n  \"totalAmount\": 2500\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": "{{orderServiceUrl}}/orders"
			},
			"response": []
		},
		{
			"name": "3. Check-Inventory-Reservation",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Stock should be RESERVED\", function () {",
							"    const jsonData = pm.response.json();",
							"    // Find the reservation for this order",
							"    const res = jsonData.find(r => r.order_id === pm.environment.get(\"activeOrderId\"));",
							"    ",
							"    pm.expect(res).to.not.be.undefined;",
							"    pm.expect(res.status).to.eql(\"RESERVED\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": {
						"token": "{{bearerToken}}"
					}
				},
				"method": "GET",
				"header": [],
				"url": "{{inventoryServiceUrl}}/api/inventory/reservations/{{activeOrderId}}"
			},
			"response": []
		},
		{
			"name": "4. Get-Payment-Status",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Payment should be SUCCESS or FAILED\", function () {",
							"    const jsonData = pm.response.json();",
							"    if (jsonData.length > 0) {",
							"        const status = jsonData[0].status;",
							"        pm.expect(status).to.be.oneOf([\"SUCCESS\", \"FAILED\"]);",
							"        pm.environment.set(\"paymentResult\", status);",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": {
						"token": "{{bearerToken}}"
					}
				},
				"method": "GET",
				"header": [
					{
						"key": "idempotency-key",
						"value": "{{idempotencyKey}}",
						"type": "text"
					}
				],
				"url": "{{paymentServiceUrl}}/payments/order/{{activeOrderId}}"
			},
			"response": []
		},
		{
			"name": "5. Get-Final-Order-Status",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Order Status matches Payment Result\", function () {",
							"    const order = pm.response.json();",
							"    const paymentStatus = pm.environment.get(\"paymentResult\");",
							"",
							"    // If payment hasn't processed yet, this might still be PENDING or AWAITING_PAYMENT",
							"    if (paymentStatus === \"SUCCESS\") {",
							"        pm.expect(order.status).to.eql(\"CONFIRMED\");",
							"    } else if (paymentStatus === \"FAILED\") {",
							"        pm.expect(order.status).to.eql(\"CANCELLED\");",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": {
						"token": "{{bearerToken}}"
					}
				},
				"method": "GET",
				"header": [],
				"url": "{{orderServiceUrl}}/orders/{{activeOrderId}}"
			},
			"response": []
		},
		{
			"name": "6. Cancel-Order (Manual Compensation)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set(\"idempotencyKey\", crypto.randomUUID());"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": {
						"token": "{{bearerToken}}"
					}
				},
				"method": "POST",
				"header": [
					{
						"key": "idempotency-key",
						"value": "{{idempotencyKey}}",
						"type": "text"
					}
				],
				"url": "{{orderServiceUrl}}/orders/cancel/{{activeOrderId}}"
			},
			"response": []
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": {
			"token": "{{bearerToken}}"
		}
	},
	"event": []
}