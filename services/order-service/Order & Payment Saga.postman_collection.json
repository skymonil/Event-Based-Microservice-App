	"item": [
		{
			"name": "Login-User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Post-response (Tests) script\r",
							"try {\r",
							"    const response = pm.response.json();\r",
							"    \r",
							"    if (response.token) {\r",
							"        pm.environment.set(\"bearerToken\", response.token);\r",
							"        console.log(\"✅ Token successfully set!\");\r",
							"    } else {\r",
							"        console.error(\"❌ Login succeeded but 'token' key was not found in response body.\");\r",
							"    }\r",
							"} catch (e) {\r",
							"    console.error(\"❌ Failed to parse response JSON: \", e);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"email\": \"monil@gmail.com\",\r\n    \"password\": \"monil@1234\"\r\n\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": "{{userServiceUrl}}/login"
			},
			"response": []
		},
		{
